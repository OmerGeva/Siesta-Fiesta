<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <h2>Edit Your Account</h2>

      <%= simple_form_for(current_user) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "first_name" }%>
        <%= f.input :last_name,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "last_name" }%>
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }%>
        <div class="col-4">
          <%= image_tag "", width: 100, class: "hidden", id: "photo-preview", style: "border-radius: 50%;" %>
          <%= f.input :photo, input_html: { class: 'hidden d-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Save Changes!", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
