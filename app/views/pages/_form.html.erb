<%= simple_form_for :search, url: listings_path, method: "GET" do |f| %>
<div class="d-flex justify-content-center align-items-center bg-light p-0 rounded" style="height: 5rem;width: 24rem">
  <div class="form-group mt-4 mr-4">
    <%= f.input :address, placeholder: 'Address', label: false, class: "border" %>
  </div>
  <div class="form-group mt-1">
    <%= f.submit "Search for Nap", class: "btn btn-secondary" %>
  </div>
</div>
<% end %>
