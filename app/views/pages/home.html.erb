<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.thesleepjudge.com/wp-content/uploads/2017/04/asleep-in-couch.jpg);">
  <div class="container">
    <h1 class="d-flex justify-content-around mb-3">Take a nap at</h1>
    <h3 class="d-flex justify-content-around mb-5"><%= render "form", listing: @new_listing %></h3>
  </div>
</div>



<div class="container">
  <h1 class="m-3 border-bottom">Featured naps nearby: </h1>
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <div class="card m-2 shadow-sm" style="height: 450px; width: 16rem;">
        <img src="https://pixfeeds.com/images/sleep/pillows/1200-488664889-boy-sleeping-on-couch.jpg" class="card-img-top" alt="Image">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title pb-3 border-bottom"><%= listing.title %></h3>
          <div class="d-flex justify-content-between align-items-end mt-auto">
            <div>

              <p class="card-text"><%= listing.category.capitalize %></p>
              <p class="card-text"><%= listing.address %></p>
            </div>
            <p class="card-text">$<%= listing.price %></p>
          </div>
          <%= link_to "Go to Listing", listing_path(listing), class: "btn btn-primary btn-block mt-3" %>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>


