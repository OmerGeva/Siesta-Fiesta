<div class="container mt-5 buffer">
  <h1>Create a New Listing</h1>
  <div class="row">
    <div class="col-8">
      <%= simple_form_for [@listing] do |f| %>
      <%= f.input :title %>
      <p>Category:</p>
      <div class='choose-category d-flex'>
        <div class='category-icons'>
        <i class="fas fa-couch" id="couch" style="font-size:25px;"></i>
        <i class="fas fa-campground" id="tent" style="font-size:25px;"></i>
        <img src="https://image.flaticon.com/icons/svg/1210/1210282.svg" id="yoga-mat" style="width: 35px; filter: invert(1); opacity: 0.8;" alt="yoga mat">
        </div>
        <div class="radios">
      <%= f.input :category, label: '', collection: ['couch', 'yoga mat', 'tent'], as: :radio_buttons, input_html: {class: "invisible"} %>
     </div>
      <%#= f.input :category, label: '', collection: ['yoga mat'], as: :radio_buttons %>
      <%#= f.input :category, label: '', collection: ['tent'], as: :radio_buttons %>
      </div>
      <%= f.input :address %>
      <%= f.input :price, label: "Price (USD)" %>
      <%= f.input :description %>
    </div>
    <div class="col-4 mt-3">
      <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
      <%= f.input :photo, input_html: { class: 'hidden d-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
  </div>
  <div class="row">
    <%= f.submit "New Listing", class: "btn btn-primary ml-3", id:"new-listing-button", style: "position: absolute; top: -1000px;" %>
    <% end %>
  <button id="new-listing-alert" class="btn btn-primary btn-custom", id="new-listing-alert">Make listing!</button>
  </div>
</div>
